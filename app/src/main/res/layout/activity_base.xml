<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/base_activity_common_title_tb"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#2F67EA"
        android:elevation="6dp">

        <TextView
            android:id="@+id/base_activity_common_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:text=""
            android:singleLine="true"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/base_activity_common_save_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"
            android:text=""
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/base_activity_common_image_iv"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/base_activity_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    </RelativeLayout>

</LinearLayout>