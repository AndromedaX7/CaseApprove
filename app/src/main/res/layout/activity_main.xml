<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp" android:contentDescription="@null"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="100%"
        android:src="@mipmap/main_background"
        android:scaleType="centerCrop"
        />

    <ImageView android:contentDescription="@null"
        android:layout_width="0dp"
        android:layout_height="222dp"
        app:layout_heightPercent="30%"
        app:layout_marginTopPercent="10%"
        app:layout_widthPercent="100%" />
    <com.zhhl.android.policemovecareful.view.CircleImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/main_jinghui"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="9%"
        />
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="22%"
        android:layout_centerHorizontal="true"
        android:text="张国栋"
        android:textColor="#333"
        android:textSize="16sp"
        />

    <LinearLayout  android:layout_marginTop="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="警号:"
            android:textColor="#666"
            android:textSize="14sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#666"
            android:id="@+id/code"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="      职称:"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/police"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView android:contentDescription="@null"
        android:id="@+id/shenpi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="87%"
        android:src="@mipmap/main_daishenpi"
        app:layout_marginTopPercent="37%"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_marginTopPercent="44%"
        app:layout_marginRightPercent="16%"
        />
    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/count"
        android:text="待审批"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_marginRightPercent="16%"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/approval_statistics"
        android:scaleType="centerCrop"
        android:background="@mipmap/main_shenpitongji"
        android:text="审批统计"
        android:textColor="#fff"
        android:textSize="18sp"
        android:gravity="top"
        android:paddingLeft="12dp"
        android:paddingTop="34dp"
        app:layout_heightPercent="26%"
        app:layout_marginTopPercent="59%"
        app:layout_marginLeftPercent="6.5%"
        app:layout_widthPercent="44%"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:background="@mipmap/main_lishishenpi"
        android:text="历史审批"
        android:id="@+id/approval_history"
        android:textColor="#fff"
        android:textSize="18sp"
        android:gravity="left|center_vertical"
        android:paddingLeft="16dp"
        app:layout_heightPercent="12%"
        app:layout_marginTopPercent="59%"
        app:layout_marginLeftPercent="52%"
        app:layout_widthPercent="41.5%"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:background="@mipmap/main_anjianchaxun"
        android:text="案件查询"
        android:textColor="#fff"
        android:id="@+id/query_case"
        android:textSize="18sp"
        android:gravity="left|center_vertical"
        android:paddingLeft="16dp"

        app:layout_heightPercent="12%"
        app:layout_marginTopPercent="73%"
        app:layout_marginLeftPercent="52%"
        app:layout_widthPercent="42%"
        />

</android.support.percent.PercentRelativeLayout>